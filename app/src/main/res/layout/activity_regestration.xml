<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F1F3FB"
    android:layout_height="match_parent"
    tools:context=".Regestration">
    <TextView
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="هيا بنا نبدأ  "
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="@font/arabic_ui_text_font"/>

    <TextView
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_15sdp"
        android:textColor="#7F7F87"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="قم بإنشاء حساب Call Doctor للحصول على كل الميزات "
        android:fontFamily="@font/arabic_ui_text_font"
        android:gravity="center"
        android:textSize="14sp" />

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="@dimen/_25sdp"
       android:layout_marginTop="@dimen/_10sdp"
       android:layout_marginEnd="@dimen/_25sdp"
       android:background="@drawable/login_btn_shape">
    <EditText
        android:id="@+id/registration_user_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_shape"
        android:drawableStart="@drawable/user_icon"
        android:drawablePadding="8dp"
        android:maxLines="1"
        android:hint="اسم المستخدم "
        android:textColor="@color/black"
        android:fontFamily="@font/arabic_ui_text_font"
        android:textColorHint="@color/gray_text_color"
        android:layout_toStartOf="@id/close_icon_in_name_et"
        android:padding="@dimen/_9sdp" />

       <ImageView
           android:id="@+id/check_icon_in_name_et"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:src="@drawable/icon_check"
           android:layout_marginEnd="8dp"/>
       <ImageView
           android:id="@+id/close_icon_in_name_et"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_centerVertical="true"
           android:src="@drawable/icon_close"
           android:layout_marginEnd="8dp"/>
   </RelativeLayout>
    <EditText
        android:id="@+id/registration_city_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:background="@drawable/login_btn_shape"
        android:drawableStart="@drawable/city_icon"
        android:fontFamily="@font/arabic_ui_text_font"
        android:textColorHint="@color/gray_text_color"
        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:hint="المدينة "
        android:padding="@dimen/_9sdp"
        android:maxLines="1"/>

    <EditText
        android:id="@+id/registration_phone_number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:background="@drawable/login_btn_shape"
        android:drawableStart="@drawable/icon_telephone"
        android:fontFamily="@font/arabic_ui_text_font"
        android:textColorHint="@color/gray_text_color"
        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:hint="رقم الهاتف "
        android:maxLines="1"
        android:padding="@dimen/_9sdp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:background="@drawable/login_btn_shape">
    <EditText
        android:id="@+id/registration_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn_shape"
        android:drawableStart="@drawable/sign_up_pass_icon"
        android:fontFamily="@font/arabic_ui_text_font"
        android:textColorHint="@color/gray_text_color"
        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:layout_toStartOf="@id/close_icon_in_password_et"
        android:hint="كلمة السر "
        android:padding="@dimen/_9sdp"
        android:maxLines="1"/>

        <ImageView
            android:id="@+id/check_icon_in_password_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_check"
            android:layout_marginEnd="8dp"/>
        <ImageView
            android:id="@+id/close_icon_in_password_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_close"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>
    <EditText
        android:id="@+id/registration_confirm_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:background="@drawable/login_btn_shape"
        android:drawableStart="@drawable/sign_up_pass_icon"
        android:fontFamily="@font/arabic_ui_text_font"
        android:textColorHint="@color/gray_text_color"
        android:textColor="@color/black"
        android:drawablePadding="8dp"
        android:hint="تأكيد كلمة السر "
        android:padding="@dimen/_9sdp"
        android:maxLines="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_10sdp">

        <TextView
            android:id="@+id/creat_account"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/arabic_ui_text_font"
            android:layout_toEndOf="@id/registration_cb"
            android:text="There"
            android:layout_marginEnd="4dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/registration_policy_tv"
            android:textColor="@color/light_blue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/creat_account"
            android:text="hello"
            android:fontFamily="@font/arabic_ui_text_font"
            android:layout_centerVertical="true"/>

        <CheckBox
            android:id="@+id/registration_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_alignParentStart="true"
            android:buttonTint="@color/light_blue_text"
            android:layout_gravity="top" />

    </RelativeLayout>
   <Button
       android:id="@+id/registration_btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="@dimen/_16sdp"
       android:paddingStart="48dp"
       android:paddingEnd="48dp"
       android:background="@drawable/sign_up_btn_shape"
       android:textSize="20sp"
       android:fontFamily="@font/arabic_ui_text_font"
       android:text="@string/sign_up_btn"
       android:textColor="@color/white"/>




</LinearLayout>
</ScrollView>